<div class="col-lg-12">
  <div class="jumbotron">
    <h1>Browse below to find out about exciting events!</h1>
    <span class="btn btn-primary btn-lg"><%= link_to "Add an event", new_event_path %></span>
  </div>
</div>

<table class="table table-striped">
  <tr>
    <th><%= sortable :name_of_event, "Event Name" %></th>
    <th><%= sortable :location, "Location" %></th>
    <th><%= sortable :directions, "Directions"%></th>
    <th><%= sortable :streaming, "streaming" %></th>
    <th><% sortable :description, "Descrption" %></th>
    <th><%= sortable :created_at, "Posted" %></th>
  </tr>
  <% @events.each do |a| %>
      <tr>
        <td><%= a.name_of_event %></td>
        <td><%= a.location %></td>
        <td><%= a.directions %></td>
        <td><%= a.streaming %></td>
        <td><%= a.description %></td>
        <td><%= a.created_at %></td>
      </tr>
  <% end %>
</table>